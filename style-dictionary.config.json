{
  "source": ["src/assets/tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "src/",
      "files": [
        {
          "destination": "assets/css/base/_variables.css",
          "format": "css/variables",
          "options": {
            "showFileHeader": false
          }
        }
      ]
    },
    "tailwind": {
      "transformGroup": "js",
      "buildPath": "src/",
      "files": [
        {
          "destination": "assets/tailwind-tokens.json",
          "format": "json/nested"
        }
      ]
    }
  }
}
